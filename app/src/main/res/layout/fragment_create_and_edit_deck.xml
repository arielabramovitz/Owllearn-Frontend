<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.create_edit_deck.CreateAndEditDeckFragment"
    android:background="@color/back">

    <TextView
        android:id="@+id/create_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/title"
        android:textSize="40sp"
        android:text="@string/create_edit_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="20dp"

        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/create_edit_card_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/box_background"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@+id/create_edit_title"
        app:layout_constraintBottom_toTopOf="@id/card_create_button"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="30dp"
        android:layout_marginVertical="30dp"
        android:elevation="10dp"
        >
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/create_edit_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/card_create_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/card_edit_button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:elevation="10dp"
        android:backgroundTint="@color/purple"
        android:textColor="@color/black"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/card_edit_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Edit"
        app:layout_constraintEnd_toStartOf="@id/card_delete_button"
        app:layout_constraintStart_toEndOf="@id/card_create_button"
        app:layout_constraintTop_toTopOf="@id/card_create_button"
        android:elevation="10dp"
        android:backgroundTint="@color/purple"
        android:textColor="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/card_delete_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toEndOf="@id/card_edit_button"
        app:layout_constraintTop_toTopOf="@id/card_edit_button"
        android:elevation="10dp"
        android:backgroundTint="@color/purple"
        android:textColor="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>